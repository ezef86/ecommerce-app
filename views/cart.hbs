{{#contentFor "pageTitle"}}Your Shopping Cart{{/contentFor}}

<div class="container mt-4">
    <h1>Your Shopping Cart</h1>

    <div id="cart-items-container">
        {{!-- Cart items will be dynamically inserted here by main.js --}}
        <p class="text-center" id="empty-cart-message">Your cart is empty. <a href="/products">Start shopping!</a></p>
    </div>

    <div id="cart-summary" class="mt-4" style="display: none;">
        <h3>Total: $<span id="cart-total">0.00</span></h3>
        <hr>
        <h4>Customer Information (Optional)</h4>
        <form id="checkout-form">
            <div class="mb-3">
                <label for="customerName" class="form-label">Name</label>
                <input type="text" class="form-control" id="customerName" placeholder="Your Name">
            </div>
            <div class="mb-3">
                <label for="customerEmail" class="form-label">Email</label>
                <input type="email" class="form-control" id="customerEmail" placeholder="your.email@example.com">
            </div>
            <button type="submit" class="btn btn-success btn-lg" id="checkout-button">
                <i class="bi bi-bag-check-fill"></i> Finalize Purchase
            </button>
        </form>
    </div>
    <div id="checkout-message" class="mt-3"></div>
</div>